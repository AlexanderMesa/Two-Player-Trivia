<div class=row></div>
<div class="col-sm-12">
  <div class="header"></div>
  <div class="container">
    <h1 class="display-3">Trivia Game</h1>
    <p class="lead"></p>
  </div>
</div>



<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <div id="player1"></div>
      <h2>Player 1</h2>


      <form action="">
        Username:<br>
        <input type="text" name="username" value="" id="username1">
        <br>
        Score:<br>
        <input type="number" name="score" id="score1">
      </form>
    </div>
    <div class="col-sm-6">
      <div class="container-fluid">
        <div id="question_container">

          <div id="question">
            <h1>What will be our teams first question?</h1>
          </div>
          <label class="element-animation1 btn btn-lg btn-dark btn-block"><span class="btn-label"><i
                class="glyphicon glyphicon-chevron-right"></i></span>
            <input type="radio" name="q_answer" value="1" id="answer1" /><span id="a1"> 1 choice will go
              here</span></label>
          <label class="element-animation2 btn btn-lg btn-dark btn-block"><span class="btn-label"><i
                class="glyphicon glyphicon-chevron-right"></i></span>
            <input type="radio" name="q_answer" value="2" id="answer2" /><span id="a2">2 choice will go
              here</span></label>
          <label class="element-animation3 btn btn-lg btn-dark btn-block"><span class="btn-label"><i
                class="glyphicon glyphicon-chevron-right"></i></span>
            <input type="radio" name="q_answer" value="3" id="answer3" /><span id="a3">3 choice will go
              here</span></label>
          <label class="element-animation4 btn btn-lg btn-dark btn-block"><span class="btn-label"><i
                class="glyphicon glyphicon-chevron-right"></i></span>
            <input type="radio" name="q_answer" value="4" id="answer4" /><span id="a4">4 choice will go
              here</span></label>

          <br>

          <button id=submit_button>Submit Your Answer!</button> <br> <br>
        </div>
      </div>

      <div id="score"></div>
      <div id="num-wrong"></div>


      <div class="">
        <div id="result_container">
          <h1>Game Over!! <br> The Results Are..</h1><br>
          <h3>Player 1</h3>
          <form action="">
            Username:
            <input type="text" name="username" value="" id="username1">

            Final Score:
            <input type="number" name="score" id="scorefinal1">
          </form> <br>

          <h3>Player 2</h3>
          <form action="">
            Username:
            <input type="text" name="username" value="" id="username2">

            Final Score:
            <input type="number" name="score" id="scorefinal2">
          </form>

        </div>
      </div>
      <div class="waiting">
        <div id="waiting_container"></div>
        <h1> Waiting For Other Players To Connect</h1> <button id="start_button"
          class="btn btn-dark btn-lg">Start</button> <br> <br>

        <div class="tenor-gif-embed" data-postid="8119652" data-share-method="host" data-width="100%"
          data-aspect-ratio="1.518987341772152"><a href="https://tenor.com/view/ck77-waiting-gif-8119652">Toddler Bored
            GIF</a> from <a href="https://tenor.com/search/toddler-gifs">Toddler GIFs</a>
          <script type="text/javascript" async src="https://tenor.com/embed.js"></script>
        </div>
      </div>
    </div>
    <div class="col-sm-3">
      <div id="player2">
        <h2>Player 2</h2>
        <form action="">
          Username:<br>
          <input type="text" name="firstname" value="">
          <br>
          Score:<br>
          <input type="number" name="score">
      </div>
    </div>
  </div>
</div>
</div>
</div>

<script src="https://code.jquery.com/jquery.js"></script>
<script type="text/javascript" src="/js/mdb.js"></script>
<script type="text/javascript" src="/js/index.js"></script>
<script type="text/javascript" src="/js/questions.js"></script>
